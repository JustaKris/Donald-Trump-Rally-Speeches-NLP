# ============================================================================
# LLM Provider Configuration
# ============================================================================
# Choose your LLM provider: gemini, openai, anthropic, or none
LLM_PROVIDER=gemini
LLM_ENABLED=true

# API Key and Model Configuration
# Set these based on your chosen provider - no need to change when switching providers
LLM_API_KEY=your-api-key-here
LLM_MODEL_NAME=gemini-2.5-flash
LLM_TEMPERATURE=0.3
LLM_MAX_OUTPUT_TOKENS=1024

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=Trump Speeches NLP Chatbot API
APP_VERSION=0.2.0
ENVIRONMENT=development
LOG_LEVEL=INFO

# ============================================================================
# ML Models Configuration
# ============================================================================
# Sentiment Analysis
SENTIMENT_MODEL_NAME=ProsusAI/finbert
EMOTION_MODEL_NAME=j-hartmann/emotion-english-distilroberta-base

# Embeddings & Re-ranking
EMBEDDING_MODEL_NAME=all-mpnet-base-v2
RERANKER_MODEL_NAME=cross-encoder/ms-marco-MiniLM-L-6-v2

# ============================================================================
# RAG Configuration
# ============================================================================
CHROMADB_PERSIST_DIRECTORY=./data/chromadb
CHROMADB_COLLECTION_NAME=speeches
SPEECHES_DIRECTORY=./data/Donald Trump Rally Speeches

# Text Chunking
CHUNK_SIZE=2048
CHUNK_OVERLAP=150

# Search Settings
DEFAULT_TOP_K=5
USE_RERANKING=true
USE_HYBRID_SEARCH=true

# ============================================================================
# NLP Analysis Configuration
# ============================================================================
# Topic Extraction
TOPIC_RELEVANCE_THRESHOLD=0.5
TOPIC_MIN_CLUSTERS=3
TOPIC_EXCLUDED_VERBS=want,think,know,make,get,go,see,come,take,give,say,tell,ask,use,find,work,call,try,feel,leave,put,mean,keep,let,begin,seem,help,talk,turn,start,show,hear,play,run,move,like,live,believe,bring,happen,write,sit,stand,lose,pay,meet,include,continue,learn,change,lead,understand,watch,follow,stop,create,speak,read,allow,add,spend,grow,open,walk,win,offer,remember,love,consider

# Sentiment Analysis
SENTIMENT_INTERPRETATION_TEMPERATURE=0.4
SENTIMENT_INTERPRETATION_MAX_TOKENS=200

# ============================================================================
# API Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
CORS_ORIGINS=*

# ============================================================================
# Quick Start Examples
# ============================================================================
# To use Google Gemini (default):
# LLM_PROVIDER=gemini
# LLM_API_KEY=your-gemini-api-key
# LLM_MODEL_NAME=gemini-2.5-flash

# To use OpenAI GPT:
# LLM_PROVIDER=openai
# LLM_API_KEY=sk-your-openai-api-key
# LLM_MODEL_NAME=gpt-4o-mini

# To use Anthropic Claude:
# LLM_PROVIDER=anthropic
# LLM_API_KEY=sk-ant-your-anthropic-api-key
# LLM_MODEL_NAME=claude-3-5-sonnet-20241022

# To disable LLM (use extraction-based answers only):
# LLM_PROVIDER=none
# or
# LLM_ENABLED=false
